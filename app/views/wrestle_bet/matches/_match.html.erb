<div id="<%= dom_id match %>">
  <p>
    <%= match.weight %> lbs

    in <%= match.tournament.name %>
  </p>

  <p>
    <strong>Started?</strong>
    <%= match.started %>
  </p>

  <p>
    <%= match.home_wrestler.name %>
    vs.
    <%= match.away_wrestler.name %>
  </p>

  <p>
    Current Score:<br/>
    <%= match.home_score %>
    -
    <%= match.away_score %>
  </p>

  <p>
    spread: <%= match.spread %>
  </p>

</div>

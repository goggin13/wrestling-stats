<ul class="employee_list">
  <li><%= @reporter.unknown_employees.count %> Non ED Staff</li>
  <% @reporter.unknown_employees.each do |employee| %>
    <li>
      <%= employee.name %> (<%= employee.role %>)
    </li>
  <% end %>
</ul>
